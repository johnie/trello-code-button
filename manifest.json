{
  "manifest_version": 2,
  "name": "Trello Code Button",
  "description": "This extension adds a new shiny button for adding code in a Trello comment.",
  "version": "1.0.0",
  "permissions": [
    "tabs"
  ],
  "web_accessible_resources": [
    "src/css/trello-codebutton.css"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.trello.com/*"
      ],
      "js": [
        "src/js/trello-codebutton.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.trello.com/*"
      ],
      "css": [
        "src/css/trello-codebutton.css"
      ]
    }
  ]
}
